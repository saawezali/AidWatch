{
  "name": "aidwatch",
  "version": "0.1.0",
  "description": "AI-powered early warning system for humanitarian and infrastructure crises",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev -w @aidwatch/api",
    "dev:web": "npm run dev -w @aidwatch/web",
    "build": "npm run build -w @aidwatch/api && npm run build -w @aidwatch/web",
    "build:api": "npm run build -w @aidwatch/api",
    "build:web": "npm run build -w @aidwatch/web",
    "db:generate": "npm run db:generate -w @aidwatch/api",
    "db:migrate": "npm run db:migrate -w @aidwatch/api",
    "db:seed": "npm run db:seed -w @aidwatch/api",
    "lint": "eslint packages/",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "tailwindcss": "^4.1.18"
  }
}

# Database
DATABASE_URL="postgresql://aidwatch:aidwatch@localhost:5432/aidwatch?schema=public"

# API Server
API_PORT=3001
API_HOST=localhost
NODE_ENV=development

# Frontend
VITE_API_URL=http://localhost:3001

# AI/ML Services
GROQ_API_KEY=your_groq_api_key_here

# Data Sources
NEWS_API_KEY=your_newsapi_key_here
GDELT_API_URL=https://api.gdeltproject.org

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379

# SMTP Configuration (for email alerts)
# Recommended: SendPulse (12,000 emails/month free)
# Get credentials from: https://login.sendpulse.com/settings/#api
SMTP_HOST=smtp-pulse.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=alerts@yourdomain.com

# Application URL (for email links)
APP_URL=http://localhost:5173
